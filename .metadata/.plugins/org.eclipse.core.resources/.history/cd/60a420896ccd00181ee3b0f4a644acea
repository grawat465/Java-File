           public void getsignupData() {
		 Scanner sc=new Scanner(System.in);
		 System.out.println("Enter Deatails");
		 System.out.println("First name");	
		 String firstname ;
		
		 boolean run=true;
		 while(run)
		 { 
			 String firstnametemp= sc.nextLine();
		 if(v.validateFirstName(firstnametemp))
		 {
			 
			 firstname=firstnametemp;
			 run=false;
			 
		 }
		 else { 
			 System.out.println("Reenter your firstname \tg");
			 run=true;
		 }
		 }
			 run=true;
			 System.out.println("Enter your Last name");
		 String lastname;
		 while(run) {
		 String	lastnametemp =sc.nextLine();
		 if(v.validateLastName(lastnametemp))
			      
		 {
			 lastname=lastnametemp;
			 run=false;
		 }
		 else { 
			 System.out.println("Re enter your lastname\tg");
			 run= true;
		 }
		 
		 }
		 run=true;
		 System.out.println("Customer id");
		 int id;
		
		while(run) {
			 int	idtemp = sc.nextInt();
		 if(v.validateid(idtemp))
		 {
			 id=idtemp;
			 run=false;
		 }
		 else { 
			 System.out.println("Re enter your  id not matching \tg");
			 run=true;
		 }
		}
		run=true;
		System.out.println("\"Enter you email\"");
		String mail;
		
		 while(run) {
			 String mailtemp =sc.next();
			
			 if(v.validatemail(mailtemp))
				      
			 {
				 mail=mailtemp;
				 run=false;
			 }
			 else { 
				 System.out.println("Re enter your mail id\tg");
				 run= true;
			 }
			 
			 }
		 
		   run=true;
		   System.out.println("Password ");
		   
		 String	password;
		 while(run)
		 {
			 String passwordtemp=sc.next();
			 
			 if(v.validatepass(passwordtemp))
			      
			 {
				 password=passwordtemp;
				 run=false;
			 }
			 else { 
				 System.out.println("Re enter your password id\tg");
				 run= true;
			 }
			 
			 }
		 
		 // da.add(new Data( firstname,lastname,id,mail,password,username,password));
           }
	         public void getloginData()
	         {
	        	 
      		 Scanner sc=new Scanner(System.in);
      		 System.out.println("Enter login details");
      		 
      		 boolean run=true;
      		 String username="";
      		 
      		 System.out.println("Enter your username");
      		 while(run) {
      			 
      		 
      		 String usernametemp = sc.next();
      		 
      		if(v.validateuser(usernametemp))
			      
			 {
				 username=usernametemp;
				 run=false;
			 }
			 else { 
				 System.out.println("Re enter your username id\tg");
				 run= true;
			 }
      		
      		System.out.println("username is" +" "+ username);
      		
      		 
      		 
      		 
      		 }
      		 
      		 run=true;
      		 System.out.println("Enter your password");
      		 String cpassword="";
      		 
      		 while(run)
      		 {
      		 String	passwordtemp =sc.next();
      		if(v.validatecpass(passwordtemp))
			      
			 {
				 cpassword=passwordtemp;
				 run=false;
			 }
			 else { 
				 System.out.println("Re enter your password id\tg");
				 run= true;
			 }
      		 }
      		
      		 
      		 
      
      	 System.out.println("Password"+" "+ cpassword);
           }
	
	
